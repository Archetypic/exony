Subject: [PATCH] posix.mak added

---
 .gitignore |  1 +
 posix.mak  | 25 +++++++++++++++++++++++++
 2 files changed, 26 insertions(+)
 create mode 100644 posix.mak

diff --git a/.gitignore b/.gitignore
index 40776ea..debee12 100644
--- a/.gitignore
+++ b/.gitignore
@@ -2,4 +2,5 @@
 catdoc
 dman
 rdmd
+ddemangle
 
diff --git a/posix.mak b/posix.mak
new file mode 100644
index 0000000..3dd737c
--- /dev/null
+++ b/posix.mak
@@ -0,0 +1,25 @@
+DMD ?= dmd
+PREFIX ?= /usr/bin
+
+ifneq (,$(MODEL))
+	MODEL_FLAG ?= -m$(MODEL)
+endif
+
+TOOLS= \
+	rdmd \
+	ddemangle
+
+all: $(TOOLS)
+
+$(TOOLS): %: %.d
+	$(DMD) $(MODEL_FLAG) $(<)
+
+install: $(TOOLS)
+	install -d $(DESTDIR)$(PREFIX)
+	install -t $(DESTDIR)$(PREFIX) $(TOOLS)
+
+clean:
+	rm -f $(TOOLS) *.o
+
+
+.PHONY: all install clean
