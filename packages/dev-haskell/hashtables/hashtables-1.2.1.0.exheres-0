require hackage

SUMMARY="Mutable hash tables in the ST monad"
DESCRIPTION="
This package provides a couple of different implementations of mutable hash tables in the ST monad,
as well as a typeclass abstracting their common operations, and a set of wrappers to use the hash
tables in the IO monad.
"
HOMEPAGE="http://github.com/gregorycollins/hashtables"

LICENCES="BSD-3"
PLATFORMS="~amd64"

DEPENDENCIES="
    $(haskell_lib_dependencies "
        dev-haskell/hashable[=1.1*|~>1.2.1]
        dev-haskell/primitive
        dev-haskell/vector[>=0.7&<0.12]
    ")
"

BUGS_TO="virkony@gmail.com"

