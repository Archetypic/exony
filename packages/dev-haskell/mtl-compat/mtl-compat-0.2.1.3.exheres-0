require hackage [ has_haddock=false has_hscolour=false has_profile=false ]

SUMMARY="Backported Control.Monad.Except module from mtl"
DESCRIPTION="
This package backports the Control.Monad.Except module from mtl (if using mtl-2.2.0.1 or earlier),
which reexports the ExceptT monad transformer and the MonadError class.
"
HOMEPAGE="https://github.com/haskell-compat/mtl-compat"

LICENCES="BSD-3"
PLATFORMS="~amd64"

DEPENDENCIES="
    $(haskell_lib_dependencies "
        dev-haskell/mtl[~>2.2.1]
    ")
"

BUGS_TO="virkony@gmail.com"

