require hackage

SUMMARY="Happstack minus the useless stuff"
DESCRIPTION="
This packages provides a subset of Happstack that is easier to learn but still very useful. It as
100% compatible with the full version of Happstack.
"
HOMEPAGE="http://www.happstack.com/"

LICENCES="BSD-3"
PLATFORMS="~amd64"

DEPENDENCIES="
    $(haskell_lib_dependencies "
        dev-haskell/bytestring[>=0.9&<0.11]
        dev-haskell/happstack-server[>=7.1&<7.5]
        dev-haskell/mtl[>=2&<2.3]
        dev-haskell/text[>=0.11&<1.3]
    ")
"

BUGS_TO="virkony@gmail.com"

